@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = (!String.IsNullOrEmpty(ViewBag.StatusCode)) ? ViewBag.StatusCode : "500 Error";
}

<div style="text-align: center ; align-content: center ">
    <h1 style="font-weight:bold ; font-size: 80px ; color: #F0C032 ; text-shadow: -1px 0 white, 0 1px white, 1px 0 white, 0 -1px white;">Whoops!</h1>
    <h2 style="font-size: 50px; color: #F0C032; font-weight: bold; text-shadow: -1px 0 white, 0 1px white, 1px 0 white, 0 -1px white;">A @ViewBag.StatusCode </h2>
    @if (ViewBag.ErrorNumber >= 400 && ViewBag.ErrorNumber < 500)
    {
        <h3 style="font-size: 40px; color: #F0C032; font-weight: bold; text-shadow: -1px 0 white, 0 1px white, 1px 0 white, 0 -1px white;">Page Not Found</h3>
    }

    @if (ViewBag.ErrorNumber >= 500 && ViewBag.ErrorNumber < 600)
    {
        <h3 style="font-size: 40px; color: #F0C032; font-weight: bold; text-shadow: -1px 0 white, 0 1px white, 1px 0 white, 0 -1px white;">Server Error</h3>
    }

    <img src="https://i.postimg.cc/mkdB47NJ/Untitled-Artwork-3.png" width="880">
</div>

