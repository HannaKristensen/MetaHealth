<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HelpAlong </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HelpAlong", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Events", "UpcomingEvents", "Calendar")</li>
                        <li>@Html.ActionLink("Venting", "Venting", "Home")</li>
                        <li>@Html.ActionLink("Self Care Quiz", "SelfCareQuiz", "Home")</li>
                        <li>@Html.ActionLink("Mood Tracker", "Create", "SepMoods")</li>
                        <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                        <li>@Html.ActionLink("Breathing Space", "BreathingSpace", "Home")</li>
                    }

                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Flowchart", "Flowchart", "Home")</li>
                    }



                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-sm-5">
                <ul class="resourcesFooter">
                    <li>@Html.ActionLink("Team GitHub Information", "gitHubResources", "Home", new { Style = "color:black" })</li>
                    <li><a href="https://www.mentalhealth.gov/get-help/immediate-help">Immediate Mental Health Assistance</a></li>
                    <li><a href="https://policies.google.com/privacy?hl=en-US">Google Privacy Policy</a></li>
                </ul>
            </div>
            <div class="col-sm-5">
                <ul class="resourcesFooter">
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { Style = "color:black" })</li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>