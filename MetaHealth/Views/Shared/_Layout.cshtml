<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - HelpAlong </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

            </div>


            <div class="my-navbar">
                @if (User.Identity.IsAuthenticated) {

                    @Html.ActionLink("Dashboard", "UpcomingEvents", "Calendar")

                    <div class="my-dropdown">
                        <button class="my-dropbtn">
                            Self Care
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="my-dropdown-content">
                            @Html.ActionLink("Vent", "Venting", "Home")
                            @Html.ActionLink("Self Care Quiz", "SelfCareQuiz", "Home")
                            @Html.ActionLink("Breathe", "BreathingSpace", "Home")
                            @Html.ActionLink("Flowchart", "Flowchart", "Home")
                        </div>
                    </div>

                    <div class="my-dropdown">
                        <button class="my-dropbtn">
                            Mood
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="my-dropdown-content">
                            @Html.ActionLink("Add a Mood", "Create", "SepMoods")
                            @Html.ActionLink("All Moods", "Index", "SepMoods")
                        </div>
                    </div>



                    <div class="my-dropdown">
                        <button class="my-dropbtn">
                            Resources
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="my-dropdown-content">
                            @Html.ActionLink("Resource Links", "Resources", "Home")
                            @Html.ActionLink("Find Help", "SearchPage", "Search")
                        </div>
                    </div>

                    <div class="my-dropdown-settings">
                        <button class="my-dropbtn-settings">
                            Account Settings
                            <i class="fa fa-caret-down"></i>
                        </button>
                        <div class="my-dropdown-settings-content">
                            @Html.ActionLink("Edit Name", "Edit", "AspNetUsers")
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-settings" })) {
                                @Html.AntiForgeryToken()
                                <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                            }
                        </div>
                    </div>
                }

                else {
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("Flowchart", "Flowchart", "Home")
                    @Html.ActionLink("Find Help", "SearchPage", "Search")
                }

            </div>


            </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-sm-5">
                <ul class="resourcesFooter">
                    <li>@Html.ActionLink("Team GitHub Information", "gitHubResources", "Home", new { Style = "color:black" })</li>
                    <li><a href="https://www.mentalhealth.gov/get-help/immediate-help">Immediate Mental Health Assistance</a></li>
                    <li><a href="https://policies.google.com/privacy?hl=en-US">Google Privacy Policy</a></li>
                </ul>
            </div>
            <div class="col-sm-5">
                <ul class="resourcesFooter">
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home", new { Style = "color:black" })</li>
                </ul>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>