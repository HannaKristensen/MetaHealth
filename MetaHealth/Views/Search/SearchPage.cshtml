@model MetaHealth.Models.SearchViewModel

@{
    ViewBag.Title = "Search";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="center">
        <h2>Temporary Title so that I can move on from this nightmare</h2>
        <p>Some text that let's people know what to do</p>
    </div>
        @using (Html.BeginForm("FindTherapist","Search",FormMethod.Get)) {
            @Html.AntiForgeryToken()
            <div class="form-group" id="therapyCat" name="therapyCat">
                <h2>What source of support are you seeking?</h2>
                @Html.DropDownListFor(model => model.therapyCat, new List<SelectListItem> {
                    new SelectListItem{Text="Therapist", Value="therapists"},
                    new SelectListItem{Text="Psychiatrist", Value="psychiatrists"},
                    new SelectListItem{Text="Support group", Value="groups"},
                    new SelectListItem{Text="Treatment Centers", Value="treatment-rehab"}
                    },
                    new { @class = "form-control" }
                )
            
            <div class="form-group" id="therapySpec" name="therapySpec">
                <h2>What issue would you like to focus on?</h2>
                @Html.DropDownListFor(model=>model.therapyCat, new List<SelectListItem> {
                    new SelectListItem{Text="Anxiety", Value="a"},
                    new SelectListItem{Text="Depression", Value="d" },
                    new SelectListItem{Text="OCD", Value="o" },
                    new SelectListItem{Text="Bipolar Disorder", Value="b" }
                    },
                    new { @class = "form-control" }
                )
            </div>
            <div class="form-group" id="therapyZipcode" name="therapyZipcode">
                <h2>What is your zipcode?</h2>
                @Html.EditorFor(model=> model.therapyZipcode, new { htmlAttributes = new { @class="form-control"} })
            </div>

            <input type="submit" value="Find Help"/>
         </div>
        }
</body>
</html>
@section Scripts{
    <script>

    </script>
}
